<% helpers.includeJs("pro/signin-client.js") %>
<% helpers.includeCss("pro/account.css") %>
<% helpers.setHtmlTitle("EtherPad: Register Account") %>

<div class="fpcontent">
  <div class="account-container">

  <%= signinNotice() %>

  <form id="register-form" action="<%= request.path %>" method="post">
  <div class="bb bb-signin">
    <div class="bb-top">
      <div class="bb-topleft"><!-- --></div>
      <div class="bb-topright"><!-- --></div>
      <div class="bb-title">Register at <%= siteName %> EtherPad</div>
    </div>
    <div class="bb-in">
      <%= errorDiv() %>
      <div>
        <label for="fullname" id="fullname-label">Full Name</label>
        <input class="textin" type="text" name="fullName" id="fullName" value="" />
        <%= helpers.clearFloats() %>
      </div>
      <div>
        <label for="email" id="email-label">Email</label>
        <input class="textin" type="text" name="email" id="email" value="" />
        <%= helpers.clearFloats() %>
      </div>
      <div>
        <label for="password" id="password-label">Password</label>
        <input class="passin" type="password" name="password"
        id="password"
        value="" />
        <%= helpers.clearFloats() %>
      </div>
      <div>
        <label for="passwordConfirmation" id="password-confirmation-label">Confirm Password</label>
        <input class="passin" type="password" name="passwordConfirm"
        id="passwordConfirm"
        value="" />
        <%= helpers.clearFloats() %>
      </div>
      <div>
        <button type="submit" class="bluebutton bluebutton120" id="signInButton">
          Register
        </button>
        <%= helpers.clearFloats() %>
      </div>
    </div>
  </div>
  </form>
  </div>
</div>

